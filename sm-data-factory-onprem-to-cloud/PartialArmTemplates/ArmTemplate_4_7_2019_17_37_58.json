{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "sm-data-factory-onprem-to-cloud"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Data_Transformation')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Pig_Cleaning_Transfrm",
						"type": "HDInsightPig",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"scriptPath": "sm-scripts/pig-scripts/data-factory-pig-script.pig",
							"defines": {
								"InputCustomer": "wasb://sm1storageaccount1.blob.core.windows.net/sm-onprem-to-cloud-source/customer/",
								"InputFilm": "wasb://sm1storageaccount1.blob.core.windows.net/sm-onprem-to-cloud-source/film/",
								"InputInventory": "wasb://sm1storageaccount1.blob.core.windows.net/sm-onprem-to-cloud-source/Inventory/",
								"InputRental": "wasb://sm1storageaccount1.blob.core.windows.net/sm-onprem-to-cloud-source/rental/",
								"InputAddress": "wasb://sm1storageaccount1.blob.core.windows.net/sm-onprem-to-cloud-source/address/",
								"OutputCustomer": "wasb://sm1storageaccount1.blob.core.windows.net/sm-pig-output/customer/",
								"OutputFilm": "wasb://sm1storageaccount1.blob.core.windows.net/sm-pig-output/film/",
								"OutputInventory": "wasb://sm1storageaccount1.blob.core.windows.net/sm-pig-output/inventory/",
								"OutputRental": "wasb://sm1storageaccount1.blob.core.windows.net/sm-pig-output/rental/",
								"OutputAddress": "wasb://sm1storageaccount1.blob.core.windows.net/sm-pig-output/address/"
							},
							"scriptLinkedService": {
								"referenceName": "AzureBlobStorage_LinkedService",
								"type": "LinkedServiceReference"
							}
						},
						"linkedServiceName": {
							"referenceName": "HDInsight_Linked_Service",
							"type": "LinkedServiceReference"
						}
					}
				]
			}
		}
	]
}